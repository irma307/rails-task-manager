<h1>All tasks</h1>
<ul><% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task) %>
    <%= link_to  task_path(task), method: :delete do %>
    <i class="fas fa-trash-alt"></i>
    <% end %>
  </li>
  <% end %>
</ul>

<br>

<%= link_to "Add a new task", new_path, class:"btn btn-primary" %>
